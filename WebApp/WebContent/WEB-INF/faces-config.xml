<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
  <converter>
    <description>Converts strings to LocalDateTime objects</description>
    <display-name>LocalDateTimeConverter</display-name>
    <converter-id>localDateTimeConverter</converter-id>
    <converter-class>uk.ac.exeter.QuinCe.web.system.LocalDateTimeConverter</converter-class>
    <attribute>
      <attribute-name>dateOnly</attribute-name>
      <attribute-class>java.lang.Boolean</attribute-class>
      <default-value>false</default-value>
    </attribute>
  </converter>
  <managed-bean>
    <description>Processes user signup</description>
    <managed-bean-name>signupBean</managed-bean-name>
    <managed-bean-class>uk.ac.exeter.QuinCe.web.User.SignupBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <description>Email verification code checker</description>
    <managed-bean-name>verifyEmailBean</managed-bean-name>
    <managed-bean-class>uk.ac.exeter.QuinCe.web.User.VerifyEmailBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <description>Handles everything to do with the Jobs list page</description>
    <managed-bean-name>jobsBean</managed-bean-name>
    <managed-bean-class>uk.ac.exeter.QuinCe.web.jobs.JobsBean</managed-bean-class>
    <managed-bean-scope>view</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <description>Bean that can be touched to keep user sessions alive</description>
    <managed-bean-name>keepAliveBean</managed-bean-name>
    <managed-bean-class>uk.ac.exeter.QuinCe.web.KeepAliveBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <validator>
    <description>Checks that the file description for an instrument file is unique and not empty. This should be used in instrument/new/upload_file.xhtml, but I&amp;apos;m doing it in Javascript for now because it&amp;apos;s easier to work with and I&amp;apos;m not in the mood to mess around with it.</description>
    <display-name>Instrument File Description Validator</display-name>
    <validator-id>instrumentFileDescriptionValidator</validator-id>
    <validator-class>uk.ac.exeter.QuinCe.web.Instrument.NewInstrument.InstrumentFileDescriptionValidator</validator-class>
  </validator>
  <validator>
    <description>Checks that a separator is valid for a data file</description>
    <display-name>Separation Validator</display-name>
    <validator-id>separatorValidator</validator-id>
    <validator-class>uk.ac.exeter.QuinCe.web.Instrument.NewInstrument.SeparatorValidator</validator-class>
  </validator>
  <navigation-rule>
    <display-name>all_pages</display-name>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>InternalError</from-outcome>
      <to-view-id>internalerror.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>index.xhtml</display-name>
    <from-view-id>/index.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>SignUp</from-outcome>
      <to-view-id>/user/signup.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>AuthenticationFailed</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>AuthenticationSuccess</from-outcome>
      <to-view-id>/dataset/dataset_list.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>LostPassword</from-outcome>
      <to-view-id>/user/lost_password.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>LostPasswordForm</display-name>
    <from-view-id>/user/lost_password.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>LostPasswordLinkSent</from-outcome>
      <to-view-id>/user/lost_password_link_sent.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>ResetPassword</display-name>
    <from-view-id>/user/reset_password.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>PasswordChanged</from-outcome>
      <to-view-id>/user/password_changed.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>SignupForm</display-name>
    <from-view-id>/user/signup.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>Cancel</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>ValidationFailed</from-outcome>
      <to-view-id>/user/signup.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>UserExists</from-outcome>
      <to-view-id>/user/signup.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>Success</from-outcome>
      <to-view-id>/user/signup_complete.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>SignupComplete</display-name>
    <from-view-id>/user/signup_complete.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>Done</from-outcome>
      <to-view-id>/index.html</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>InstrumentList</display-name>
    <from-view-id>/instrument/instrument_list.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>name</from-outcome>
      <to-view-id>/instrument/new/instrument_name.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>NewInstrumentNavigation</display-name>
    <from-view-id>/instrument/new/*</from-view-id>
    <navigation-case>
      <from-outcome>instrument_list</from-outcome>
      <to-view-id>/instrument/instrument_list.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>name</from-outcome>
      <to-view-id>/instrument/new/instrument_name.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>variables</from-outcome>
      <to-view-id>/instrument/new/variables.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>upload_file</from-outcome>
      <to-view-id>/instrument/new/upload_file.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>assign_variables</from-outcome>
      <to-view-id>/instrument/new/assign_variables.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>run_types</from-outcome>
      <to-view-id>/instrument/new/run_types.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>general_info</from-outcome>
      <to-view-id>/instrument/new/general_info.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>variable_info</from-outcome>
      <to-view-id>/instrument/new/variable_info.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>ExternalStandardsList</display-name>
    <from-view-id>/instrument/external_standards.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>instrument_list</from-outcome>
      <to-view-id>/instrument/instrument_list.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>external_standards</from-outcome>
      <to-view-id>/instrument/external_standards.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>DiagnosticQCSetup</display-name>
    <from-view-id>/instrument/diagnostic_qc_setup.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>finish</from-outcome>
      <to-view-id>/instrument/instrument_list.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>DataFiles</display-name>
    <from-view-id>/data_file/*</from-view-id>
    <navigation-case>
      <from-outcome>upload</from-outcome>
      <to-view-id>/data_file/upload.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>file_list</from-outcome>
      <to-view-id>/data_file/file_list.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>DataSets</display-name>
    <from-view-id>/dataset/*</from-view-id>
    <navigation-case>
      <from-outcome>new_dataset</from-outcome>
      <to-view-id>/dataset/new_dataset.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>dataset_list</from-outcome>
      <to-view-id>/dataset/dataset_list.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>approval_list</from-outcome>
      <to-view-id>/dataset/for_approval_list.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>internal_calibration_plot</from-outcome>
      <to-view-id>/dataset/internal_calibration.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>user_qc</from-outcome>
      <to-view-id>/dataset/manual_qc.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>export</from-outcome>
      <to-view-id>/dataset/export.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>sensor_offsets</from-outcome>
      <to-view-id>/dataset/sensor_offsets.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>To Instruments List Page</display-name>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>instrument_list</from-outcome>
      <to-view-id>/instrument/instrument_list.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <factory>
    <exception-handler-factory>
      uk.ac.exeter.QuinCe.web.system.CustomExceptionHandlerFactory
    </exception-handler-factory>
  </factory>
</faces-config>
