<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<description>Processes user signup</description>
		<managed-bean-name>signupBean</managed-bean-name>
		<managed-bean-class>uk.ac.exeter.QuinCe.web.User.SignupBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Email verification code checker</description>
		<managed-bean-name>verifyEmailBean</managed-bean-name>
		<managed-bean-class>uk.ac.exeter.QuinCe.web.User.VerifyEmailBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Email verification code sender</description>
		<managed-bean-name>sendEmailCodeBean</managed-bean-name>
		<managed-bean-class>uk.ac.exeter.QuinCe.web.User.SendEmailCodeBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Small bean for producing lists of instruments</description>
		<managed-bean-name>instrumentListBean</managed-bean-name>
		<managed-bean-class>uk.ac.exeter.QuinCe.web.Instrument.InstrumentListBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Handles editing of the user profile</description>
		<managed-bean-name>userProfileBean</managed-bean-name>
		<managed-bean-class>uk.ac.exeter.QuinCe.web.User.UserProfileBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Handles everything to do with the Jobs list page</description>
		<managed-bean-name>jobsBean</managed-bean-name>
		<managed-bean-class>uk.ac.exeter.QuinCe.web.jobs.JobsBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Holds all data required by the Data Screen, where the user performs QC.</description>
		<managed-bean-name>dataScreenBean</managed-bean-name>
		<managed-bean-class>uk.ac.exeter.QuinCe.web.files.DataScreenBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Bean that can be touched to keep user sessions alive</description>
		<managed-bean-name>keepAliveBean</managed-bean-name>
		<managed-bean-class>uk.ac.exeter.QuinCe.web.KeepAliveBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Handles gas standard deployments</description>
		<managed-bean-name>gasStandardsBean</managed-bean-name>
		<managed-bean-class>uk.ac.exeter.QuinCe.web.Instrument.GasStandardsBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<validator>
		<description>Ensures that instrument names are not empty, and are unique to the user</description>
		<display-name>Instrument Name Validator</display-name>
		<validator-id>instrumentNameValidator</validator-id>
		<validator-class>uk.ac.exeter.QuinCe.web.Instrument.newInstrument.InstrumentNameValidator</validator-class>
	</validator>
	<validator>
		<description>Checks that the file description for an instrument file is unique and not empty. This should be used in instrument/new/upload_file.xhtml, but I&amp;apos;m doing it in Javascript for now because it&amp;apos;s easier to work with and I&amp;apos;m not in the mood to mess around with it.</description>
		<display-name>Instrument File Description Validator</display-name>
		<validator-id>instrumentFileDescriptionValidator</validator-id>
		<validator-class>uk.ac.exeter.QuinCe.web.Instrument.newInstrument.InstrumentFileDescriptionValidator</validator-class>
	</validator>
	<validator>
		<description>Checks that a separator is valid for a data file</description>
		<display-name>Separation Validator</display-name>
		<validator-id>separatorValidator</validator-id>
		<validator-class>uk.ac.exeter.QuinCe.web.Instrument.newInstrument.SeparatorValidator</validator-class>
	</validator>
	<navigation-rule>
		<display-name>all_pages</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>InternalError</from-outcome>
			<to-view-id>internalerror.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>SignUp</from-outcome>
			<to-view-id>/user/signup.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>AuthenticationFailed</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>AuthenticationSuccess</from-outcome>
			<to-view-id>/voyage/voyage_list.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>SignupForm</display-name>
		<from-view-id>/user/signup.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>ValidationFailed</from-outcome>
			<to-view-id>/user/signup.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>UserExists</from-outcome>
			<to-view-id>/user/signup.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>Success</from-outcome>
			<to-view-id>/user/signup_complete.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>SignupComplete</display-name>
		<from-view-id>/user/signup_complete.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Done</from-outcome>
			<to-view-id>/index.html</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>SendEmailCode</display-name>
		<from-view-id>/user/verify_email.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Success</from-outcome>
			<to-view-id>/user/code_sent.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>ValidationFailed</from-outcome>
			<to-view-id>/index.html</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>InstrumentList</display-name>
		<from-view-id>/instrument/instrument_list.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>name</from-outcome>
			<to-view-id>/instrument/new/instrument_name.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>gasStandards</from-outcome>
			<to-view-id>/instrument/standards.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>NewInstrumentNavigation</display-name>
		<from-view-id>/instrument/new/*</from-view-id>
		<navigation-case>
			<from-outcome>instrument_list</from-outcome>
			<to-view-id>/instrument/instrument_list.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>name</from-outcome>
			<to-view-id>/instrument/new/instrument_name.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>upload_file</from-outcome>
			<to-view-id>/instrument/new/upload_file.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>assign_variables</from-outcome>
			<to-view-id>/instrument/new/assign_variables.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>run_types</from-outcome>
			<to-view-id>/instrument/new/run_types.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>other_info</from-outcome>
			<to-view-id>/instrument/new/other_info.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>GasStandardsList</display-name>
		<from-view-id>/instrument/gas_standards.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>instrument_list</from-outcome>
			<to-view-id>/instrument/instrument_list.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>gas_standards</from-outcome>
			<to-view-id>/instrument/gas_standards.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>UserProfileEdit</display-name>
		<from-view-id>/user/user_edit.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>file_list</from-outcome>
			<to-view-id>/data/file_list.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>edit_profile</from-outcome>
			<to-view-id>/user/user_edit.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>DataFiles</display-name>
		<from-view-id>/data_file/*</from-view-id>
		<navigation-case>
			<from-outcome>upload</from-outcome>
			<to-view-id>/data_file/upload.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>file_list</from-outcome>
			<to-view-id>/data_file/file_list.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>DataScreen</display-name>
		<from-view-id>/data/data_screen.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>file_list</from-outcome>
			<to-view-id>/data/file_list.xhtml</to-view-id>
		</navigation-case>
    </navigation-rule>
    <navigation-rule>
		<display-name>ExportFile</display-name>
		<from-view-id>/data/export.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>file_list</from-outcome>
			<to-view-id>/data/file_list.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


</faces-config>
